# Flask Configuration
# Environment: development, testing, or production
FLASK_ENV=development

# Secret Keys
# IMPORTANT: Generate secure random keys for production!
# Use: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production

# Server Configuration
PORT=5000

# MongoDB Configuration
# Development (local MongoDB):
MONGODB_URI=mongodb://localhost:27017/swati_jewellers_dev

# Development (Docker):
# MONGODB_URI=mongodb://admin:admin123@mongodb:27017/swati_jewellers_dev?authSource=admin

# Production (use strong password):
# MONGODB_URI=mongodb://admin:STRONG_PASSWORD_HERE@mongodb:27017/swati_jewellers?authSource=admin

# CORS Configuration
# Comma-separated list of allowed origins
# Development:
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Production (replace with your actual domain):
# CORS_ORIGINS=https://swatijewellers.com,https://www.swatijewellers.com

# ML Model Configuration
MODEL_PATH=models/

# Gunicorn Configuration (Production only)
# Number of worker processes (recommended: CPU cores * 2 + 1)
GUNICORN_WORKERS=4
# Log level: debug, info, warning, error, critical
GUNICORN_LOG_LEVEL=info

# Feature Flags (optional)
# Enable/disable specific features
# ENABLE_ML_PREDICTIONS=true
# ENABLE_REAL_TIME_UPDATES=true

# Email Configuration (optional - for future features)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM_EMAIL=noreply@swatijewellers.com

# Payment Gateway Configuration (optional - for future features)
# RAZORPAY_KEY_ID=your-razorpay-key-id
# RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# File Upload Configuration (optional)
# MAX_UPLOAD_SIZE=5242880  # 5MB in bytes
# UPLOAD_FOLDER=uploads/
# ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,webp

# Logging Configuration
# LOG_LEVEL=INFO
# LOG_FILE=logs/app.log

# Cache Configuration (optional - for future Redis integration)
# REDIS_URL=redis://localhost:6379/0
# CACHE_TTL=300  # Cache time-to-live in seconds

# Security Configuration
# SESSION_COOKIE_SECURE=true  # Set to true in production with HTTPS
# SESSION_COOKIE_HTTPONLY=true
# SESSION_COOKIE_SAMESITE=Lax

# Rate Limiting (optional - for future implementation)
# RATE_LIMIT_ENABLED=true
# RATE_LIMIT_PER_MINUTE=60

# Database Backup Configuration (optional)
# BACKUP_DIR=backups/
# AUTO_BACKUP_ENABLED=false
# BACKUP_RETENTION_DAYS=30
